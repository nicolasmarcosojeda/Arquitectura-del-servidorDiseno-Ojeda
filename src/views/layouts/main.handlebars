<body>
  <header>
    <h1>Bienvenido a la aplicación de gestión de productos</h1>
    <nav>
      <!-- Puedes agregar enlaces de navegación si es necesario -->
    </nav>
  </header>

  <main>
    {{{body}}} <!-- Contenido de la vista específica se insertará aquí -->

    <!-- Formulario para agregar nuevos productos -->
    <form action="/api/products/" method="post" id="addProductForm">
      <label for="title">Título:</label>
      <input type="text" id="title" name="title" required>
      
      <label for="price">Precio:</label>
      <input type="number" id="price" name="price" step="0.01" required>

      <button type="submit">Agregar Producto</button>
    </form>
  </main>

  <footer>
